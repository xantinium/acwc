{
    "compilerOptions": {
        "lib": [
            "DOM",
        ],
        "strict": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist/types",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src",
        "./declarations.d.ts"
    ],
    "exclude": [
        "./dist"
    ],
}
